<section id="section-registration">
    <div>
        <h1>Registro</h1>
        <form action="/api/sessions/register" method="post" class="form-grid">
            <div class="form-group-login">
                <label for="first_name">Nombre:</label>
                <input 
                {{#if errorUserName}}value="{{dataRegistration.first_name}}" {{/if}}
                {{#if errorEmail}}value="{{dataRegistration.first_name}}" {{/if}}
                type="text" id="first_name" class="form-control" name="first_name" required>
            </div>
            <div class="form-group-login">
                <label for="last_name">Apellido:</label>
                <input 
                {{#if errorUserName}}value="{{dataRegistration.last_name}}" {{/if}} 
                {{#if errorEmail}}value="{{dataRegistration.last_name}}" {{/if}}
                type="text" id="last_name" name="last_name" class="form-control" required>
            </div>
            <div class="form-group-login">
                <label for="age">Edad:</label>
                <input 
                {{#if errorUserName}}value="{{dataRegistration.age}}" {{/if}} 
                {{#if errorEmail}}value="{{dataRegistration.age}}" {{/if}}
                type="number" id="age" name="age" class="form-control" required>
            </div>
            <div class="form-group-login">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <div class="form-group-login email-group">
                <label for="username">Nombre de Usuario:</label>
                <input 
                {{#if errorEmail}}value="{{dataRegistration.username}}" {{/if}}
                type="text" id="username" name="username" class="form-control" required>
                {{#if errorUserName}}
                    <p class="errorPassword" class="error"> {{errorUserNameMessage}} </p>
                {{/if}}
            </div>
            <div class="form-group-login email-group">
                <label for="email">Email:</label>
                <input {{#if errorUserName}}value="{{dataRegistration.email}}" {{/if}} type="email" id="email" name="email" class="form-control" required>
                {{#if errorEmail}}
                <p class="errorPassword" class="error"> {{errorEmailMessage}} </p>
                {{/if}}
            </div>

            <button class="btn btn-dark btn-register" type="submit">Registro</button>
        </form>
        <p>¿Ya tienes cuenta? <a href="/login">Inicia Sesión</a></p>
    </div>
</section>