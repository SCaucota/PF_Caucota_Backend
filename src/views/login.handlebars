<section id="sectionLogin">
    <div id="divFormLogin">
        <h1>Inicio Sesión</h1>
        <div class="form-button-container">
            <form action="/api/sessions/login" method="POST">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required {{#if errorPassword}}value="{{userEmail}}"{{/if}}>
                {{#if error}}
                    <p class="errorPassword" class="error"> {{errorUser}} </p>
                {{/if}}
                <br>
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" required>
                {{#if errorPassword}}
                    <p class="errorPassword" class="error"> {{errorMessage}} </p>
                {{/if}}
                <br>
                <button class="btn btn-dark button-login" type="submit">Iniciar Sesión</button>
                <p>¿Olvidaste tu contraseña? <a href="/resetpassword">Restablecer contraseña</a></p>
            </form>
            <div class="button-container">
                <p>Otras formas de ingresar:</p>
                <a class="btn btn-dark github-button" href="/api/sessions/github">
                    <img class="github-icon" src="https://res.cloudinary.com/dyktfxjer/image/upload/v1724647559/github_2_uzwgxe.png" alt="github">
                    Github
                </a>
            </div>
        </div>
        
        <p>Si no tienes un usuario, puedes <a href="/register">registrarte</a></p>
    </div>
</section>