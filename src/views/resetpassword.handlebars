<section id="section-resetpassword">
    <div class="resetpassword-container">
        <h3>Generar un nuevo correo de restablecimiento</h3>
        <div>
            <form action="/api/sessions/requestPasswordReset" method="POST">
                <label for="">Email: </label>
                <div class="input-group mb-3">
                    
                    <input type="email" class="form-control" name="email" id="email" required
                        aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Enviar</button>
                </div>
            </form>

            <p>¿Recuerdas tu contraseña? <a href="/login">Inicia Sesión</a></p>

            {{#if error}}
            <p class="errorPassword" class="error"> {{error}} </p>
            {{/if}}
        </div>
    </div>
</section>