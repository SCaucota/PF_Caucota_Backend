{{>header}}
<section id="section-realtimeproducts">
    <div id="productsContainer"></div>

    <h2 class="form-title-product">Formulario para agregar productos</h2>

    <div class="form-container-realtimeproducts">
        <form id="formAddProduct" method="POST">
            <input class="form-control" type="text" id="title" name="title" placeholder="Titulo" required>
            <input class="form-control" type="text" id="description" name="description" placeholder="Descripcion" required>
            <input class="form-control" type="number" id="price" name="price" placeholder="Precio" required>
            <input class="form-control" type="file" id="img" name="img" accept="image/*">
            <input class="form-control" type="text" id="code" name="code" placeholder="CÃ³digo" required>
            <input class="form-control" type="number" id="stock" name="stock" placeholder="Stock" required>
            <input class="form-control" type="text" id="category" name="category" placeholder="Categoria" required>
            <select class="form-select" id="status" name="status">
                <option selected value="true">Activo</option>
                <option value="false">Inactivo</option>
            </select>
            <button id="btnSend" class="btn btn-dark"> Enviar </button>
        </form>
    </div>
</section>

<script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
<script src="js/main.js"></script>